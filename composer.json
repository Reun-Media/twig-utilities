{
    "name": "reun/twig-utilities",
    "description": "Various Twig utilities and extensions",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Kimmo Salmela",
            "email": "cryszon@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "twig/twig": "^3.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-message": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Reun\\TwigUtilities\\": "src/TwigUtilities"
        }
    },
    "require-dev": {
        "codeception/specify": "^1.3",
        "php-di/php-di": "^6.0",
        "phpunit/phpunit": "^9.1",
        "slim/slim": "^4.4"
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php tests/phpunit",
        "functional-test-server": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8080 -t tests/functional/TwigUtilities"
        ]
    },
    "suggest": {
        "ezyang/htmlpurifier": "Required by HtmlPurify filter",
        "slim/slim": "Slim Framework ^4.0 is required for Slim specific features"
    }
}
